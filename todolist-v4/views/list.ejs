<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <% for (var i=0; i<newListItems.length; i++) { %>
        <form class="" action="/delete" method="post">
          <div class="item">
            <input name="checked" value="<%= newListItems[i]._id %>" type="checkbox" onChange = "this.form.submit()">
            <p><%= newListItems[i].name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>">
          </input>
        </form>
      <% } %>

      <form class="item" action="/" method="post">    <!-- posting newItem to / site -->
                                                      <!-- in list.ejs we are getting list value (listTitle) and separating data -->
        <input type="text" name="newItem" placeholder="New item" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
      </form>
    </div>

<%- include("footer") -%>
